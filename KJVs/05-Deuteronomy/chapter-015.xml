			<phrase strongs="430">thy God</phrase>
			<phrase strongs="6299">redeemed</phrase>
			<phrase strongs="6680">thee: therefore I command</phrase>
			<phrase strongs="1697">thee this thing</phrase>
			<phrase strongs="3117">to day.</phrase>
		</verse>
		<verse num="16">
			<phrase strongs="559">And it shall be, if he say</phrase>
			<phrase strongs="3318">unto thee, I will not go away</phrase>
			<phrase strongs="157">from thee; because he loveth</phrase>
			<phrase strongs="1004">thee and thine house,</phrase>
			<phrase strongs="2895">because he is wellwith thee;</phrase>
		</verse>
		<verse num="17">
			<phrase strongs="3947">Then thou shalt take</phrase>
			<phrase strongs="4836">an aul,</phrase>
			<phrase strongs="5414">and thrust</phrase>
			<phrase strongs="241">it through his ear</phrase>
			<phrase strongs="1817">unto the door,</phrase>
			<phrase strongs="5650">and he shall be thy servant</phrase>
			<phrase strongs="5769">for ever.</phrase>
			<phrase strongs="519">And also unto thy maidservant</phrase>
			<phrase strongs="6213">thou shalt dolikewise.</phrase>
		</verse>
		<verse num="18">
			<phrase strongs="7185">It shall not seem hard</phrase>
			<phrase strongs="5869">unto thee,</phrase>
