			<phrase strongs="776">from the land</phrase>
			<phrase strongs="4714">of Egypt,</phrase>
			<phrase strongs="559">saying,</phrase>
		</verse>
		<verse num="2">
			<phrase strongs="3045">You only have I known</phrase>
			<phrase strongs="4940">of all the families</phrase>
			<phrase strongs="127">of the earth:</phrase>
			<phrase strongs="6485">therefore I will punish</phrase>
			<phrase strongs="5771">you for all your iniquities.</phrase>
		</verse>
		<verse num="3">
			<phrase strongs="8147">Can two</phrase>
			<phrase strongs="3212">walk</phrase>
			<phrase strongs="3162">together,</phrase>
			<phrase strongs="1115">except</phrase>
			<phrase strongs="3259">they be agreed?</phrase>
		</verse>
		<verse num="4">
			<phrase strongs="738">Will a lion</phrase>
			<phrase strongs="7580">roar</phrase>
			<phrase strongs="3293">in the forest,</phrase>
			<phrase strongs="2964">when he hath no prey?</phrase>
			<phrase strongs="3715">will a young lion</phrase>
			<phrase strongs="5414">cry out</phrase>
			<phrase strongs="6963"></phrase>
			<phrase strongs="4585">of his den,</phrase>
			<phrase strongs="3920">if he have taken</phrase>
			<phrase strongs="1115">nothing?</phrase>
		</verse>
		<verse num="5">
			<phrase strongs="6833">Can a bird</phrase>
			<phrase strongs="5307">fall</phrase>
			<phrase strongs="6341">in a snare</phrase>
