		<verse num="1">
			<phrase strongs="8085">Hear</phrase>
			<phrase strongs="1697">this word</phrase>
			<phrase strongs="3068">that the LORD</phrase>
			<phrase strongs="1696">hath spoken</phrase>
			<phrase strongs="1121">against you, O children</phrase>
