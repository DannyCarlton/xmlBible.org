			<phrase strongs="3068">The LORD</phrase>
			<phrase strongs="1696">also spake</phrase>
			<phrase strongs="3091">unto Joshua,</phrase>
			<phrase strongs="559">saying,</phrase>
		</verse>
		<verse num="2">
			<phrase strongs="1696">Speak</phrase>
			<phrase strongs="1121">to the children</phrase>
			<phrase strongs="3478">of Israel,</phrase>
			<phrase strongs="559">saying,</phrase>
			<phrase strongs="5414">Appoint out</phrase>
