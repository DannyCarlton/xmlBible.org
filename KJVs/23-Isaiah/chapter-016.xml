			<phrase strongs="1832">thee with my tears,</phrase>
			<phrase strongs="2809">O Heshbon,</phrase>
			<phrase strongs="500">and Elealeh:</phrase>
			<phrase strongs="1959">for the shouting</phrase>
			<phrase strongs="7019">for thy summer fruits</phrase>
			<phrase strongs="7105">and for thy harvest</phrase>
			<phrase strongs="5307">is fallen.</phrase>
		</verse>
		<verse num="10">
			<phrase strongs="8057">And gladness</phrase>
			<phrase strongs="622">is taken away,</phrase>
			<phrase strongs="1524">and joy</phrase>
			<phrase strongs="3759">out of the plentiful field;</phrase>
			<phrase strongs="3754">and in the vineyards</phrase>
			<phrase strongs="7442">there shall be no singing,</phrase>
			<phrase strongs="7321">neither shall there be shouting:</phrase>
			<phrase strongs="1869">the treaders</phrase>
			<phrase strongs="1869">shall tread out</phrase>
			<phrase strongs="3196">no wine</phrase>
			<phrase strongs="3342">in their presses;</phrase>
			<phrase strongs="1959">I have made their vintage shouting</phrase>
			<phrase strongs="7673">to cease.</phrase>
		</verse>
		<verse num="11">
			<phrase strongs="4578">Wherefore my bowels</phrase>
			<phrase strongs="1993">shall sound</phrase>
			<phrase strongs="3658">like an harp</phrase>
			<phrase strongs="4124">for Moab,</phrase>
			<phrase strongs="7130">and mine inward parts</phrase>
			<phrase strongs="7025">for Kirharesh.</phrase>
		</verse>
		<verse num="12">
			<phrase strongs="7200">And it shall come to pass, when it is seen</phrase>
			<phrase strongs="4124">that Moab</phrase>
			<phrase strongs="3811">is weary</phrase>
			<phrase strongs="1116">on the high place,</phrase>
