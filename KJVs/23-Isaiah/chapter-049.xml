	<chapter num="49">
		<verse num="1">
			<phrase strongs="8085">Listen,</phrase>
			<phrase strongs="339">O isles,</phrase>
			<phrase strongs="7181">unto me; and hearken,</phrase>
			<phrase strongs="3816">ye people,</phrase>
			<phrase strongs="7350">from far;</phrase>
