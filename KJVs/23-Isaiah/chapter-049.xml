		</verse>
		<verse num="3">
			<phrase strongs="559">And said</phrase>
			<phrase strongs="5650">unto me, Thou art my servant,</phrase>
			<phrase strongs="3478">O Israel,</phrase>
			<phrase strongs="6286">in whom I will be glorified.</phrase>
		</verse>
		<verse num="4">
			<phrase strongs="559">Then I said,</phrase>
			<phrase strongs="3021">I have laboured</phrase>
