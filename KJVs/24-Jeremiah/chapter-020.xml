			<phrase strongs="7121">hath not called</phrase>
			<phrase strongs="8034">thy name</phrase>
			<phrase strongs="6583">Pashur,</phrase>
			<phrase strongs="4036">but Magormissabib.</phrase>
		</verse>
		<verse num="4">
			<phrase strongs="559">For thus saith</phrase>
			<phrase strongs="3068">the LORD,</phrase>
			<phrase strongs="5414">Behold I will make</phrase>
			<phrase strongs="4032">thee a terror</phrase>
