			<phrase strongs="7725">it? and shall not he render</phrase>
			<phrase strongs="120">to every man</phrase>
			<phrase strongs="6467">according to his works?</phrase>
		</verse>
		<verse num="13">
			<phrase strongs="1121">My son,</phrase>
