			<phrase strongs="8104">and shall keep</phrase>
			<phrase strongs="7272">thy foot</phrase>
			<phrase strongs="3921">from being taken.</phrase>
		</verse>
		<verse num="27">
			<phrase strongs="4513">Withhold</phrase>
