		<verse num="25">
			<phrase strongs="3372">Be not afraid</phrase>
			<phrase strongs="6597">of sudden</phrase>
			<phrase strongs="6343">fear,</phrase>
			<phrase strongs="7722">neither of the desolation</phrase>
			<phrase strongs="7563">of the wicked,</phrase>
			<phrase strongs="935">when it cometh.</phrase>
		</verse>
		<verse num="26">
			<phrase strongs="3068">For the LORD</phrase>
