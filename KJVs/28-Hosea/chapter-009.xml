			<phrase strongs="868">a reward</phrase>
			<phrase strongs="1637">upon every cornfloor</phrase>
			<phrase strongs="1715">.</phrase>
		</verse>
		<verse num="2">
			<phrase strongs="1637">The floor</phrase>
			<phrase strongs="3342">and the winepress</phrase>
			<phrase strongs="7462">shall not feed</phrase>
