			<phrase strongs="1104">is swallowed up:</phrase>
			<phrase strongs="1471">now shall they be among the Gentiles</phrase>
			<phrase strongs="3627">as a vessel</phrase>
			<phrase strongs="2656">wherein is no pleasure.</phrase>
		</verse>
		<verse num="9">
			<phrase strongs="5927">For they are gone up</phrase>
			<phrase strongs="804">to Assyria,</phrase>
			<phrase strongs="6501">a wild ass</phrase>
			<phrase strongs="909">alone</phrase>
			<phrase strongs="669">by himself: Ephraim</phrase>
			<phrase strongs="8566">hath hired</phrase>
			<phrase strongs="158">lovers.</phrase>
		</verse>
		<verse num="10">
			<phrase strongs="8566">Yea, though they have hired</phrase>
			<phrase strongs="1471">among the nations,</phrase>
			<phrase strongs="6908">now will I gather</phrase>
			<phrase strongs="2490">them, and they shall sorrow</phrase>
			<phrase strongs="4592">a little</phrase>
			<phrase strongs="4853">for the burden</phrase>
			<phrase strongs="4428">of the king</phrase>
			<phrase strongs="8269">of princes.</phrase>
		</verse>
		<verse num="11">
