			<phrase strongs="6256">for it is time</phrase>
			<phrase strongs="1875">to seek</phrase>
			<phrase strongs="3068">the LORD,</phrase>
			<phrase strongs="935">till he come</phrase>
			<phrase strongs="3384">and rain</phrase>
			<phrase strongs="6664">righteousness upon you.</phrase>
		</verse>
		<verse num="13">
			<phrase strongs="2790">Ye have plowed</phrase>
			<phrase strongs="7562">wickedness,</phrase>
			<phrase strongs="7114">ye have reaped</phrase>
			<phrase strongs="5766">iniquity;</phrase>
			<phrase strongs="398">ye have eaten</phrase>
