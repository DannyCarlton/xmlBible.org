		</verse>
		<verse num="3">
			<phrase strongs="559">For now they shall say,</phrase>
			<phrase strongs="4428">We have no king,</phrase>
			<phrase strongs="3372">because we feared</phrase>
			<phrase strongs="3068">not the LORD;</phrase>
			<phrase strongs="4428">what then should a king</phrase>
			<phrase strongs="6213">doto us?</phrase>
		</verse>
		<verse num="4">
			<phrase strongs="1696">They have spoken</phrase>
			<phrase strongs="1697">words,</phrase>
			<phrase strongs="422">swearing</phrase>
			<phrase strongs="7723">falsely</phrase>
			<phrase strongs="3772">in making</phrase>
			<phrase strongs="1285">a covenant:</phrase>
