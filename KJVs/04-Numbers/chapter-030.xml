			<phrase strongs="6213">he shall do</phrase>
			<phrase strongs="3318">according to all that proceedeth</phrase>
			<phrase strongs="6310">out of his mouth.</phrase>
		</verse>
		<verse num="3">
			<phrase strongs="802">If a woman</phrase>
