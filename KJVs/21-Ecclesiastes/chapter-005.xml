		</verse>
		<verse num="12">
			<phrase strongs="8142">The sleep</phrase>
			<phrase strongs="5647">of a labouring man</phrase>
			<phrase strongs="4966">is sweet,</phrase>
			<phrase strongs="398">whether he eat</phrase>
			<phrase strongs="4592">little</phrase>
