		</verse>
		<verse num="9">
			<phrase strongs="3504">Moreover the profit</phrase>
			<phrase strongs="776">of the earth</phrase>
			<phrase strongs="4428">is for all: the king</phrase>
			<phrase strongs="5647">himself is served</phrase>
			<phrase strongs="7704">by the field.</phrase>
		</verse>
		<verse num="10">
			<phrase strongs="157">He that loveth</phrase>
			<phrase strongs="3701">silver</phrase>
