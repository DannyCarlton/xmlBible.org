			<phrase strongs="2568">and fifth</phrase>
			<phrase strongs="435">day of the month Elul,</phrase>
			<phrase strongs="2572">in fifty</phrase>
			<phrase strongs="8147">and two</phrase>
			<phrase strongs="3117">days.</phrase>
		</verse>
