			<phrase strongs="1237">in the plain</phrase>
			<phrase strongs="207">of Ono.</phrase>
			<phrase strongs="2803">But they thought</phrase>
			<phrase strongs="6213">to do</phrase>
			<phrase strongs="7451">me mischief.</phrase>
		</verse>
		<verse num="3">
			<phrase strongs="7971">And I sent</phrase>
			<phrase strongs="4397">messengers</phrase>
			<phrase strongs="559">unto them, saying,</phrase>
			<phrase strongs="6213">I am doing</phrase>
			<phrase strongs="1419">a great</phrase>
			<phrase strongs="4399">work,</phrase>
