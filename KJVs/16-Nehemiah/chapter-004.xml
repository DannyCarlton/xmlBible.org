			<phrase strongs="2490">began</phrase>
			<phrase strongs="5640">to be stopped,</phrase>
			<phrase strongs="3966">then they were very</phrase>
			<phrase strongs="2734">wroth,</phrase>
		</verse>
		<verse num="8">
