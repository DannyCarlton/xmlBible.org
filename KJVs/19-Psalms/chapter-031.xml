			<phrase strongs="3068">me, O LORD</phrase>
			<phrase strongs="410">God</phrase>
			<phrase strongs="571">of truth.</phrase>
		</verse>
		<verse num="6">
			<phrase strongs="8130">I have hated</phrase>
			<phrase strongs="8104">them that regard</phrase>
			<phrase strongs="7723">lying</phrase>
			<phrase strongs="1892">vanities:</phrase>
