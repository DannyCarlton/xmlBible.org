		</verse>
		<verse num="14">
			<phrase strongs="982">But I trusted</phrase>
			<phrase strongs="3068">in thee, O LORD:</phrase>
			<phrase strongs="559">I said,</phrase>
			<phrase strongs="430">Thou art my God.</phrase>
		</verse>
		<verse num="15">
			<phrase strongs="6256">My times</phrase>
