		</verse>
		<verse num="16">
			<phrase strongs="6440">Make thy face</phrase>
			<phrase strongs="215">to shine</phrase>
			<phrase strongs="5650">upon thy servant:</phrase>
			<phrase strongs="3467">save</phrase>
			<phrase strongs="2617">me for thy mercies' sake.</phrase>
		</verse>
		<verse num="17">
			<phrase strongs="954">Let me not be ashamed,</phrase>
			<phrase strongs="3068">O LORD;</phrase>
